    "def main():\n",
    "    # Length and width of the open field\n",
    "    of_ln, of_wd = 44, 44\n",
    "    # Top-left, top-right, bottom-right, bottom-left, and enclosure\n",
    "    # The origin is closest to the top-left point whose x+y is smallest\n",
    "    tl, tr, br, bl, encl = (28,39), (364,23), (377,336), (74,387), (68,204)\n",
    "    \n",
    "    # Quadrangle vertices\n",
    "    pts = np.array([tl, tr, br, bl], dtype=\"float32\")\n",
    "    # Location transformation\n",
    "    transformedLoc = locCoordConvert(data, pts, of_ln, of_wd)\n",
    "    # Points transformation\n",
    "    #transformedPts = ptsCoordConvert(pts, [[50,50],[100,2]], 44, 44)    \n",
    "    # Cal angle and dist\n",
    "    angleDist = calAngle_Dist(transformedLoc, ptsCoordConvert(pts, list(encl), of_ln, of_wd)[0])\n",
    "    \n",
    "    return pd.concat([transformedLoc, angleDist], axis=1)\n",
    "\n",
    "\n",
    "\n",
    "if __name__ == \"__main__\":\n",
    "    start = time()\n",
    "    main()\n",
    "print(\"Total running time: %s\" %(time() - start))"
