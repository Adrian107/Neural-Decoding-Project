    "def calAngle_Dist(tdata, tencl):\n",
    "    '''\n",
    "    Task: Calculate distance and angle between enclosure and defeated mouse\n",
    "    reference point is the center point of head of tail regarding Angle\n",
    "    head point for Distance\n",
    "    \n",
    "    Parameters\n",
    "    ----------\n",
    "    tdata: DataFrame\n",
    "        transformed location data\n",
    "    \n",
    "    tencl: tuple, list of list\n",
    "        transformed coordinates of the enclosure\n",
    "    '''\n",
    "    hd = pd.concat([tdata[\"x\"], tdata[\"y\"]], axis=1)\n",
    "    bd = pd.concat([tdata[\"x.1\"], tdata[\"y.1\"]], axis=1, join=\"inner\", keys=['x', 'y'])\n",
    "    # Inverse of Point Body with respect to Point Head\n",
    "    inv_bd = hd.x*2-bd.x, hd.y*2-bd.y\n",
    "    \n",
    "    # Avoid Pandas KeyError\n",
    "    hd = np.array(hd)\n",
    "    \n",
    "    angle, dist = [], []\n",
    "    for i in range(len(hd)):\n",
    "        # Order: Inverse of Point Body, Point Head, Point Enclosure\n",
    "        angle.append(getAngle((inv_bd[0][i], inv_bd[1][i]), hd[i], tencl))\n",
    "        dist.append(getDist(hd[i], tencl))\n",
    "        \n",
    "    return pd.DataFrame({'angle': angle,\n",
    "                         'dist': dist})"
   ]
  },
